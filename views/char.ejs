<%- include("partials/header.ejs")-%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Character Counter</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script src="/js/char.js">
    </script>
    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        user-select: none;
      }
      #footer {
        margin-top: auto;
      }
      .form-control {
        height: 200px;
      }
      @media only screen and (max-width: 767px) {
        .form-control {
          height: 100px;
        }
      }
      @media (max-width: 600px) {
        body {
          min-height: 95vh;
          display: flex;
          flex-direction: column;
          user-select: none;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-md justify-content-center align-items-center">
        <br>
      <center><h2>Character Counter</h2></center><br>
      <div class="form-floating">
        <textarea
          class="form-control"
          placeholder="Leave Characters here"
          id="char"
          oninput="countCharacters()"
          style="height: 100px;"
        ></textarea
        ><label for="floatingTextarea2">Enter Characters Here</label>
      </div>
      <br />
      <div
        class="container-fluid d-flex justify-content-center align-items-center"
      >
        <button type="button" class="btn btn-outline" disabled>
          <div id="result">Number of characters: 0</div>
        </button>
      </div>
    </div>
  </body>
</html>
<%- include("partials/footer.ejs")-%>
